<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/_5sdp" />
            <stroke android:width="1dp" android:color="@color/color_light_gray"/>
        </shape>
    </item>
    <item android:gravity="center_vertical|end" android:end="@dimen/_8sdp" android:start="@dimen/_8sdp">
        <layer-list>
            <item android:width="12dp" android:height="12dp"  android:gravity="center" android:right="@dimen/_4sdp" android:bottom="10dp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <!-- <solid android:color="#707070" />-->
                        <stroke
                            android:width="2dp"
                            android:color="@color/color_deep_gray" />
                    </shape>
                </rotate>
            </item>
            <item android:width="20dp" android:height="10dp" android:bottom="21dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
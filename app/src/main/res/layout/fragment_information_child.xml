<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".fragments.InformationChildFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_medium"
            android:text="Information"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintBottom_toTopOf="@id/tv_instit_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_instit_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="School Type"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toTopOf="@id/customLine"
            app:layout_constraintEnd_toStartOf="@id/curriculm"
            app:layout_constraintStart_toStartOf="@id/tv_information"
            app:layout_constraintTop_toBottomOf="@id/tv_information" />

        <View
            android:id="@+id/customLine"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/silver"
            app:layout_constraintStart_toStartOf="@id/tv_instit_type"
            app:layout_constraintTop_toBottomOf="@id/tv_instit_type" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_instittution_type"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="International"
            android:textColor="@color/color_deep_gray"
            android:layout_marginEnd="@dimen/_6sdp"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@id/tv_curriculm"
            app:layout_constraintEnd_toStartOf="@+id/tv_curriculm"
            app:layout_constraintStart_toStartOf="@id/tv_instit_type"
            app:layout_constraintTop_toBottomOf="@id/tv_instit_type" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_edu_level"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:text="Educational Level"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="@id/gender"
            app:layout_constraintEnd_toStartOf="@id/gender"
            app:layout_constraintStart_toStartOf="@+id/tv_instit_type"
            app:layout_constraintTop_toBottomOf="@+id/tv_instittution_type" />

        <View
            android:id="@+id/customLine2"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/silver"
            app:layout_constraintStart_toStartOf="@id/tv_instit_type"
            app:layout_constraintTop_toBottomOf="@+id/tv_edu_level" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_eduction_level"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:text="Kinder- Nursery"
            android:textColor="@color/color_deep_gray"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@id/tv_gender"
            app:layout_constraintEnd_toStartOf="@id/tv_gender"
            app:layout_constraintStart_toStartOf="@+id/tv_edu_level"
            app:layout_constraintTop_toBottomOf="@+id/customLine2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/curriculm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_6sdp"
            android:text="Curriculum"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_instit_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_instit_type"
            app:layout_constraintTop_toTopOf="@+id/tv_instit_type" />

        <View
            android:id="@+id/customLine3"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/silver"
            app:layout_constraintStart_toStartOf="@+id/curriculm"
            app:layout_constraintTop_toBottomOf="@+id/curriculm" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_curriculm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="American"
            android:textColor="@color/color_deep_gray"
            android:textSize="@dimen/_12ssp"

            app:layout_constraintBottom_toBottomOf="@+id/tv_instittution_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/curriculm"
            app:layout_constraintTop_toBottomOf="@id/tv_instit_type" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:text="Gender"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/curriculm"
            app:layout_constraintTop_toTopOf="@id/tv_edu_level" />

        <View
            android:id="@+id/customLine4"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/silver"
            app:layout_constraintStart_toStartOf="@id/gender"
            app:layout_constraintTop_toBottomOf="@+id/gender" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="Co_Education"
            android:textColor="@color/color_deep_gray"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_eduction_level"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/gender"
            app:layout_constraintTop_toBottomOf="@id/gender" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/gtet_quality_edu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Get Quality Education"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_edu_level"
            app:layout_constraintTop_toBottomOf="@id/tv_eduction_level" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            android:text="@string/large_text"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/gtet_quality_edu"
            app:layout_constraintTop_toBottomOf="@id/gtet_quality_edu" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>